<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quiz.quizmedical"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/quiz1"
        android:label="@string/app_name_short"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name_short">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".QuizActivity"
            android:label="@string/title_activity_quiz"></activity>
        <activity
            android:name=".FirstMenuActivity"
            android:label="@string/title_activity_quiz"></activity>
        <activity
            android:name=".DataLoaderActivity"
            android:label="@string/title_activity_quiz"></activity>
        <activity
            android:name=".DataSenderActivity"
            android:label="@string/title_activity_quiz"></activity>
        <activity
            android:name=".ImportExportDBActivity"
            android:label="@string/title_activity_quiz"></activity>
        <activity android:name=".ScorciatoiaActivity"></activity>
        <activity
            android:name=".StatActivity"
            android:label="@string/title_activity_quiz"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".StatActivityAlf"
            android:label="@string/title_activity_quiz"></activity>
        <activity
            android:name=".InfoActivity"
            android:label="@string/info"
            android:theme="@android:style/Theme.Dialog"></activity>

        <service android:name=".TimerService" />
    </application>

</manifest>